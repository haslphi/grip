<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="grip" transaction-type="RESOURCE_LOCAL">
    
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <!-- <class>at.jku.se.grip.beans.Person</class>  -->
    
    <properties>
		<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
		<property name="javax.persistence.jdbc.url"
			value="jdbc:derby:C:/dev/derbyDatabases/gripDb;create=true" />
		<property name="javax.persistence.jdbc.user" value="grip" />
		<property name="javax.persistence.jdbc.password" value="grip" />
	
		<!-- EclipseLink should create the database schema automatically -->
		<property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
		<property name="eclipselink.ddl-generation.output-mode" value="database" />
		<!-- <property name="eclipselink.logging.level" value="FINE"/>
		<property name="eclipselink.logging.parameters" value="true"/> -->
    </properties>

  </persistence-unit>
</persistence>